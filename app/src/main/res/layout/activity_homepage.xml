<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:id="@+id/one"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="300dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categories"
                android:textSize="16sp"
                android:textColor="#000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="10dp"
                android:text="Browse categories">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sellall"
                android:textSize="16sp"
                android:textColor="@color/red"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="10dp"
                android:text="See all">

            </TextView>


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="15dp"
                android:id="@+id/Buttonelectronics"
                android:background="@drawable/circle_yellow"
                android:src="@drawable/ic_tv_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/categories"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Buttonelectronics"
                app:layout_constraintStart_toStartOf="@id/Buttonelectronics"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/Buttonelectronics"
                android:text="Electronics">
            </TextView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:id="@+id/Buttonvechiles"
                android:background="@drawable/circle_green"
                android:src="@drawable/ic_directions_car_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/categories"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Buttonvechiles"
                app:layout_constraintStart_toStartOf="@id/Buttonvechiles"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/Buttonvechiles"
                android:text="Vehicles"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:background="@drawable/circle_orange"
                android:src="@drawable/dresss"
                android:id="@+id/Buttondresses"
                app:layout_constraintTop_toBottomOf="@id/categories"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Buttondresses"
                app:layout_constraintStart_toStartOf="@id/Buttondresses"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/Buttondresses"
                android:text="Dresses"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:id="@+id/Buttonfurniture"
                android:background="@drawable/circle_purple"
                android:layout_marginTop="50dp"
                android:src="@drawable/building"
                android:layout_marginStart="25dp"
                app:layout_constraintTop_toBottomOf="@id/Buttonelectronics"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Buttonfurniture"
                app:layout_constraintStart_toStartOf="@id/Buttonfurniture"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/Buttonfurniture"
                android:text="Property">

            </TextView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_marginTop="50dp"
                android:id="@+id/Buttonproperty"
                android:background="@drawable/cicle_blue"
                android:src="@drawable/ic_weekend_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/Buttonvechiles"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Buttonproperty"
                app:layout_constraintStart_toStartOf="@id/Buttonproperty"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/Buttonproperty"
                android:text="Furniture"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:background="@drawable/circle_mixyellow"
                android:src="@drawable/ic_watch_black_24dp"
                android:id="@+id/Buttonaccessories"
                app:layout_constraintTop_toBottomOf="@id/Buttondresses"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Buttonaccessories"
                app:layout_constraintStart_toStartOf="@id/Buttonaccessories"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/Buttonaccessories"
                android:text="Accessories"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/one"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:id="@+id/fresh"
            android:textColor="#000000"
            android:text="Fresh recommendations"
            android:layout_marginLeft="25dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fresh"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/recyclerviewmain"
            tools:listitem="@layout/recyclerview"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>


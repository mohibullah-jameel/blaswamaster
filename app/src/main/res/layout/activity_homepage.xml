<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:id="@+id/bottomnavigationview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/nav_items"
        tools:ignore="MissingConstraints" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/appbar"
                android:fitsSystemWindows="true">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="444dp"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/red"
                    app:title="Renter"
                    app:titleTextColor="#ffffff" />

            </com.google.android.material.appbar.AppBarLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:civ_border_color="@color/red"
                app:civ_border_width="1dp"
                android:layout_margin="15dp"
                android:id="@+id/personalimage"
                android:src="@drawable/profileimage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appbar">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fullname"
                app:layout_constraintStart_toEndOf="@id/personalimage"
                app:layout_constraintTop_toTopOf="@id/personalimage"
                app:layout_constraintBottom_toBottomOf="@id/personalimage"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appbar"
                android:id="@+id/notifaction"
                android:src="@drawable/ic_notifications_none_black_24dp"
                android:layout_margin="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/personalimage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawablePadding="15dp"
                android:textSize="16sp"
                android:id="@+id/search"
                android:hint="@string/find_cars_furniture_and_more"
                android:drawableStart="@drawable/ic_search_black_24dp"
                android:background="@drawable/searchback"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:paddingLeft="15dp">
            </EditText>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:id="@+id/one"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="300dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/categories"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp"
                    android:text="Browse categories">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sellall"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="10dp"
                    android:text="See all">

                </TextView>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="15dp"
                    android:id="@+id/electronics"
                    android:background="@drawable/circle_yellow"
                    android:src="@drawable/ic_tv_black_24dp"
                    app:layout_constraintTop_toBottomOf="@id/categories"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/electronics"
                    app:layout_constraintStart_toStartOf="@id/electronics"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@id/electronics"
                    android:text="Electronics">
                </TextView>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="10dp"
                    android:id="@+id/vechiles"
                    android:background="@drawable/circle_green"
                    android:src="@drawable/ic_directions_car_black_24dp"
                    app:layout_constraintTop_toBottomOf="@id/categories"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/vechiles"
                    app:layout_constraintStart_toStartOf="@id/vechiles"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@id/vechiles"
                    android:text="Vehicles"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="10dp"
                    android:background="@drawable/circle_orange"
                    android:src="@drawable/dresss"
                    android:id="@+id/dresses"
                    app:layout_constraintTop_toBottomOf="@id/categories"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/dresses"
                    app:layout_constraintStart_toStartOf="@id/dresses"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@id/dresses"
                    android:text="Dresses"/>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="10dp"
                    android:id="@+id/furniture"
                    android:background="@drawable/circle_purple"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/building"
                    android:layout_marginStart="25dp"
                    app:layout_constraintTop_toBottomOf="@id/electronics"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/furniture"
                    app:layout_constraintStart_toStartOf="@id/furniture"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@id/furniture"
                    android:text="Property">

                </TextView>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="10dp"
                    android:layout_marginTop="50dp"
                    android:id="@+id/property"
                    android:background="@drawable/cicle_blue"
                    android:src="@drawable/ic_weekend_black_24dp"
                    app:layout_constraintTop_toBottomOf="@id/vechiles"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/property"
                    app:layout_constraintStart_toStartOf="@id/property"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@id/property"
                    android:text="Furniture"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="10dp"
                    android:background="@drawable/circle_mixyellow"
                    android:src="@drawable/ic_watch_black_24dp"
                    android:id="@+id/mobile"
                    app:layout_constraintTop_toBottomOf="@id/dresses"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/mobile"
                    app:layout_constraintStart_toStartOf="@id/mobile"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@id/mobile"
                    android:text="Accessories"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:id="@+id/two"
                app:layout_constraintTop_toBottomOf="@id/one"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:id="@+id/fresh"
                    android:textColor="#000000"
                    android:text="Fresh recommendations"
                    android:layout_marginLeft="25dp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/fresh"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingBottom="70dp"
                    android:id="@+id/recyclerviewmain"
                    tools:listitem="@layout/recyclerview"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

